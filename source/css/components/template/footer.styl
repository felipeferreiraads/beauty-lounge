footer 
    width 100%
    height 30rem 
    padding 7rem 0
    .grid-footer
        display flex
        justify-content: space-between
        flex-wrap: wrap
    .menu-footer
        flex-basis 25%
        display flex
        justify-content: space-between
        ul
            list-style-type none
            padding: 0
        li
            margin-bottom 2rem
        a 
            font-size: 1.8rem
            color: $color.primary
            font-weight: bold
    .info
        flex-basis 25%
        display flex
        flex-direction: column
        margin-left 10%
        address 
            font: 1.8rem/3rem 'Noto Sans';
            color #555
        .social
            width: 20.4rem
            height: 4rem
            display: flex
            margin-top: 2rem
            & a
                width: 4rem
                height: 4rem
                line-height: 4rem
                text-align: center
                display: inline-block
                font-size: 2rem
                color: $color.white
                background: $color.primary
                transition: .3s
                margin-right 1rem
                &:hover
                    background: $color.primaryhover
    .logo
        flex-basis 15%
        img 
            width 20rem