header
    width 100%
    .logo
        align-self: center
    .grid-header
        width 100%
        height 10rem
        display flex
        align-items flex-end
        justify-content space-between
        .right
            flex-basis 60%
            height 100%
            padding 2rem 0 1rem
            display flex    
            flex-direction column
            align-items: flex-end
            justify-content: space-between
        .info
            display flex
            justify-content: flex-end
            > *
                margin-left: 20px
                color: $color.text
                font-size 1.4rem
                font-family: $font-family.secondary
                .fa
                    color: $color.primary
                    font-size 1.6rem
                    margin-right .5rem
            form
                display inline
            input 
                width 15rem
                border-width: 0 0 1px 0
                border-color: #ccc
                color inherit