.blog-home
    width: 100%
    background-image: linear-gradient(to right, $color.secundary, #c83d8c, #ce5198)
    .container
        max-width 100%
        padding: 8em 0 5rem
        background: url(../img/bg-blog-home.png) left bottom no-repeat
        background-size 500px

.grid-blog-home
    width: 102.4rem
    max-width 100%
    display: flex
    justify-content: space-between
    margin 0 auto
    padding-left 10%
    & .left
        flex-basis: 14%
        & h2
            font-size: 5rem
            font-weight: 800
            color: $color.white
        & a
            font-size: 1.4rem
            font-weight: 600
            padding-bottom: 1rem
            color: $color.white
            text-transform: uppercase
            display: inline-block
            position: relative
            margin-top: 2rem
            &:after
                width: 100%
                height 2px
                content: ''
                position: absolute
                bottom: 0
                left: 0
                background: #c4edff
    
    & .right
        flex-basis: 70rem
        +below(1150px)
            flex-basis: 100%
        & .post
            width: 100%
            display: block
            padding: 1rem
            display: flex
            border-radius: 5px
            transition: .3s
            margin-bottom: 3rem
            &:hover
                background: $color.primaryhover
            & figure
                width: 30rem
                height: 18rem
                border-radius: 5px
                overflow: hidden
                & img 
                    width: 100%
                    height 100%
                    object-fit: cover
                    object-position: center 
            & .info
                flex: 1
                padding: 0 2rem 0 3rem
                display: flex
                flex-direction: column
                justify-content: center
                & span
                    font-size: 1.4rem
                    font-weight: 600
                    color: $color.white
                    text-transform: uppercase
                    margin-bottom: 1.5rem
                & h3
                    font-size: 2rem
                    font-weight: 800
                    color: $color.white
                    margin-bottom: 1.5rem
                & p
                    font: 1.4rem/2.5rem 'Noto Sans'
                    color: $color.white