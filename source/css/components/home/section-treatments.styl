.treatments
    width 100%
    padding 7rem 0
    border-bottom 1px solid #e6e6e6
    .grid-treatments
        width 100%
        position relative
    .prev, .next
        font-size 5rem
        color: $color.primary
        position absolute
        top 62%
        left 0
        transform translateY(-50%)
        cursor pointer
    .next
        left auto
        right 0
    h2
        font-size 3rem
        font-weight bold
        flex-basis 15rem
        color: $color.primary
        padding-bottom 1rem
        position relative
        text-align center
        margin-bottom 1.5rem
        &:after
            position absolute
            bottom 0
            left 50%
            transform translateX(-50%)
            content ''
            width 3rem
            height 5px
            border-radius 2px
            background: $color.secundary
    p.subtitle
        font-size 1.8rem
        color: $color.text
        max-width 450px
        text-align center
        margin 0 auto 6rem
        font-family: $font-family.secondary
    .carousel
        flex: 1
        overflow hidden
        padding 0 0 2rem 0
    .owl-stage
        display: flex
        justify-content: space-between
        height: 100%
        +between(1050px, 1150px)
            left: -5rem
        +below(1050px)
            left: -12rem
    .owl-stage-outer
        padding-bottom 5rem
    .owl-item
        display flex
        justify-content: center

    .item
        width 50rem
        border-radius 20rem 5px 5px 20rem
        display flex
        position relative
        border 1px solid #e6e6e6
        figure
            width 20rem
            height 20rem
            border-radius 20rem
            overflow hidden
        .info
            flex 1
            padding: 2rem 2rem 3rem
            h3
                font-size 3.5rem
                color: $color.primary
                margin-bottom 2rem
            p 
                font-size 1.6rem
                color: $color.text
                font-family: $font-family.secondary

    .owl-nav
        display none

.owl-dots
    display flex
    justify-content: center
    .owl-dot 
        border none 
        background transparent
        width auto
        padding 0
        span
            width 1.2rem
            height 1.2rem
            border-radius 1.2rem
            background: $color.primary
            margin-right .5rem
            border none
            display block
    .active span
        background: $color.primaryhover