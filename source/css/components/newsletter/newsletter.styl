.newsletter
    background-image: linear-gradient(to right, $color.secundary, #c83d8c, #ce5198)
    .grid
        display flex
        align-items: center
        height 15rem
    .left
        width 50%
        display flex
        justify-content: flex-end
        padding-right 5rem
        border-right: 1px solid $color.white
        img
            height: 10rem
    .right
        padding-left 5rem
        h2
            font-size 1.6rem
            color: $color.white
            margin-bottom 15px
            &:first-line
                font-size: 2.4rem
        input
            width 25rem
            height 3.5rem
            border-radius 5px
            border none
            padding 0 10px
            font-size 1.6rem
            margin-right 1rem
        button
            width 10rem
            height 3.5rem
            border none
            border-radius 5px
            background: $color.primaryhover
            color: $color.white
            font-size 1.6rem
            font-weight bold
            cursor pointer
