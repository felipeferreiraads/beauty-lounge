.grid-treatments-internal
    display flex
    flex-direction column
    width 90%
    margin 0 auto
    padding 5rem 0 10rem
    .filter
        display flex
        justify-content: center
        padding-bottom 1rem
        border-bottom 1px solid #e6e6e6
        > *
            margin-left 2rem
        input[type=text]
            width 30rem
            height 35px
            border: 1px solid $color.primary
            border-radius 15px
            color: $color.primary
            font-size 16px
            padding 0 1rem
        a
            width: 30rem
            height 3.5rem
            border: 1px solid $color.primary
            display inline-block
            border-radius 15px
            line-height 3.5rem
            text-align center
            font-size 1.8rem
            font-weight bold
            color: $color.primary
            transition: .2s;
            &:hover
                background: $color.primary
                color: $color.white

    .treatments-internal
        display flex
        flex-wrap: wrap
        justify-content: space-between
        .treatment
            margin-top 5rem